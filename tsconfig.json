{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["../node_modules/@types"],
    "moduleResolution": "node",
    "traceResolution": false,
    "baseUrl": ".",
    "paths": {
      "common/*": ["common/*"],
      "@/*": ["example/*"]
    }
  },
  "exclude": ["node_modules"]
}
